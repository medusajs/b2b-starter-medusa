# ============================================================================
# Medusa.js v2 Storefront Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in your values
# Ref: https://docs.medusajs.com/resources/nextjs-starter

# ----------------------------------------------------------------------------
# Medusa Backend API
# ----------------------------------------------------------------------------
# URL of your Medusa backend server
# Dev: http://localhost:9000
# Prod: https://api.yourdomain.com
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000

# Publishable API Key (create in Admin > Settings > API Keys)
# Required for Store API authentication and sales channel filtering
# Format: pk_...
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_xxxxx

# ----------------------------------------------------------------------------
# Region & Currency
# ----------------------------------------------------------------------------
# Default region (ISO 3166-1 alpha-2 code)
# Examples: us, br, gb, de
NEXT_PUBLIC_DEFAULT_REGION=br

# Default currency code (ISO 4217)
# Examples: USD, BRL, EUR, GBP
NEXT_PUBLIC_DEFAULT_CURRENCY=BRL

# ----------------------------------------------------------------------------
# Payment Providers
# ----------------------------------------------------------------------------
# Stripe (optional)
# Get keys from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_KEY=pk_test_xxxxx

# PayPal (optional)
# Get client ID from: https://developer.paypal.com/dashboard
NEXT_PUBLIC_PAYPAL_CLIENT_ID=xxxxx

# ----------------------------------------------------------------------------
# Analytics & Monitoring
# ----------------------------------------------------------------------------
# PostHog (optional)
# Sign up at: https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Vercel Analytics (optional, auto-enabled on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=xxxxx

# ----------------------------------------------------------------------------
# Search & Catalog
# ----------------------------------------------------------------------------
# Algolia (optional, for advanced search)
# NEXT_PUBLIC_ALGOLIA_APP_ID=xxxxx
# NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=xxxxx
# NEXT_PUBLIC_ALGOLIA_INDEX_NAME=products

# ----------------------------------------------------------------------------
# Base URL (for SSR/SSG absolute URLs)
# ----------------------------------------------------------------------------
# Required for canonical URLs, Open Graph, and sitemap generation
# Dev: http://localhost:8000
# Prod: https://www.yourdomain.com
NEXT_PUBLIC_BASE_URL=http://localhost:8000

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
# Enable B2B features (companies, quotes, approvals)
NEXT_PUBLIC_ENABLE_B2B=true

# Enable solar calculator
NEXT_PUBLIC_ENABLE_SOLAR_CALCULATOR=true

# Enable product comparison
NEXT_PUBLIC_ENABLE_PRODUCT_COMPARISON=true
