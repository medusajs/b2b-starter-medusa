{
  "name": "yello-solar-hub-backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "medusa develop",
    "build": "medusa build",
    "start": "medusa start -H 0.0.0.0 -p ${PORT:-9000}",
    "start:migrate": "npm run migrate && npm start",
    "migrate": "medusa db:migrate",
    "seed": "medusa exec ./src/scripts/seed.ts",
    "db:setup": "medusa db:create && medusa db:migrate",
    "catalog:import": "medusa exec ./src/scripts/import-catalog.ts",
    "normalize:ids": "tsx scripts/normalize-product-ids.ts",
    "enrich:images": "medusa exec ./scripts/enrich-product-images.ts",
    "test:unit": "cross-env TEST_TYPE=unit NODE_OPTIONS=--experimental-vm-modules jest --silent --runInBand --forceExit",
    "test:integration:http": "cross-env TEST_TYPE=integration:http NODE_OPTIONS=--experimental-vm-modules jest --silent=false --runInBand --forceExit",
    "test:integration:modules": "cross-env TEST_TYPE=integration:modules NODE_OPTIONS=--experimental-vm-modules jest --silent --runInBand --forceExit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@medusajs/admin-sdk": "^2.10.3",
    "@medusajs/framework": "^2.10.3",
    "@medusajs/js-sdk": "^2.10.3",
    "@medusajs/medusa": "^2.10.3",
    "@medusajs/types": "^2.10.3",
    "@medusajs/workflows-sdk": "^2.10.3",
    "@mikro-orm/core": "^6.4.3",
    "@mikro-orm/migrations": "^6.4.3",
    "@mikro-orm/postgresql": "^6.4.3",
    "@types/multer": "^2.0.0",
    "@types/ws": "^8.5.13",
    "awilix": "^8.0.1",
    "multer": "^2.0.2",
    "pg": "^8.13.0",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@medusajs/test-utils": "^2.10.3",
    "@mikro-orm/cli": "^6.4.3",
    "@swc/core": "^1.5.7",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.4.0"
  },
  "overrides": {
    "zod": "^3.23.8"
  }
}