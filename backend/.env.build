# Server Configuration
NODE_ENV=development
PORT=9000
HOST=0.0.0.0

# Medusa Admin
MEDUSA_ADMIN_ONBOARDING_TYPE=nextjs
MEDUSA_ADMIN_ONBOARDING_NEXTJS_DIRECTORY=../storefront

# Performance & Memory
NODE_OPTIONS="--max-old-space-size=4096"
DB_NAME=medusa_db