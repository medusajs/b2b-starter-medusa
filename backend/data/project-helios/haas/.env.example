# HaaS Platform - Environment Variables Example
# Copy this file to .env and adjust values for your environment

# Application Settings
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-in-production-must-be-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
LOG_LEVEL=DEBUG

# Database Configuration
DATABASE_URL=sqlite:///./haas_platform.db
# Para PostgreSQL: postgresql://user:password@localhost/dbname
# DATABASE_URL=postgresql://haas_user:haas_password@localhost:5432/haas_db

# Redis Configuration  
REDIS_URL=redis://localhost:6379
# Com senha: redis://:password@localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Port Configuration (customizable to avoid conflicts)
HAAS_API_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Alternative Port Set 1 (if main ports are busy)
# HAAS_API_PORT=8100
# POSTGRES_PORT=5433
# REDIS_PORT=6380
# ADMINER_PORT=8180
# REDIS_COMMANDER_PORT=8181
# NGINX_HTTP_PORT=8080
# NGINX_HTTPS_PORT=8443

# Alternative Port Set 2 (for multiple instances)
# HAAS_API_PORT=8200
# POSTGRES_PORT=5434
# REDIS_PORT=6381
# ADMINER_PORT=8280
# REDIS_COMMANDER_PORT=8281
# NGINX_HTTP_PORT=8082
# NGINX_HTTPS_PORT=8445

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# Webhook Settings
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# Logging
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/haas.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# External API Keys (if needed)
# INMETRO_API_KEY=your-inmetro-api-key
# OTHER_API_KEY=your-other-api-key