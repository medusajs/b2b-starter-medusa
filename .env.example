# Redis (compartilhado entre server e client se necess√°rio)
REDIS_URL=redis://localhost:6379

# AWS (placeholders - ajustar conforme deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ---------------------------
# Desenvolvimento
# ---------------------------

# Ambiente (development, staging, production)
NODE_ENV=development

# Logs (verbose para dev, error para prod)
LOG_LEVEL=info

# ---------------------------
# Seguran√ßa
# ---------------------------

# JWT Secret (usar apenas no server)
