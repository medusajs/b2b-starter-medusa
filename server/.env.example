# ---------------------------
# Banco de Dados
# ---------------------------
DATABASE_URL=postgres://username:password@localhost:5432/medusa_db

# ---------------------------
# Medusa Core
# ---------------------------
MEDUSA_DEV_URL=http://localhost:9000
STORE_CORS=http://localhost:8000
ADMIN_CORS=http://localhost:7000,http://localhost:7001

# ---------------------------
# HTTP
# ---------------------------
HOST=0.0.0.0
PORT=9000

# ---------------------------
# Redis
# ---------------------------
REDIS_URL=redis://localhost:6379

# ---------------------------
# JWT & Autentica√ß√£o
# ---------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
COOKIE_SECRET=your-cookie-secret

# ---------------------------
# AWS S3 (para uploads)
# ---------------------------
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-medusa-bucket

# ---------------------------
# Stripe (pagamentos)
# ---------------------------
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ---------------------------
# Email (SendGrid, etc.)
# ---------------------------
SENDGRID_API_KEY=SG.your-sendgrid-key
FROM_EMAIL=noreply@yellosolarhub.com

# ---------------------------
# Solar Calculator API
# ---------------------------
SOLAR_API_BASE_URL=https://api.solarcalculator.com
SOLAR_API_KEY=your-solar-api-key

# ---------------------------
# Logs & Monitoramento
# ---------------------------
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
